# Example environment variables for kagent deployment
# Copy this file to .env and fill in your values

# K3s Configuration
K3S_TOKEN=your-secure-token-here
K3S_MASTER_IP=192.168.1.100
K3S_WORKER1_IP=192.168.1.101
K3S_WORKER2_IP=192.168.1.102

# SSH Configuration
SSH_PRIVATE_KEY=~/.ssh/id_rsa
SSH_PUBLIC_KEY=~/.ssh/id_rsa.pub
ANSIBLE_USER=ubuntu

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OLLAMA_MODEL=llama3.1:8b

# Git Configuration
GIT_REPO_URL=https://github.com/Spectro34/CFP-kagent.git
GIT_BRANCH=main

# Resource Configuration
KAGENT_MEMORY_REQUEST=2Gi
KAGENT_MEMORY_LIMIT=4Gi
KAGENT_CPU_REQUEST=1
KAGENT_CPU_LIMIT=2

OLLAMA_MEMORY_REQUEST=4Gi
OLLAMA_MEMORY_LIMIT=8Gi
OLLAMA_CPU_REQUEST=2
OLLAMA_CPU_LIMIT=4
